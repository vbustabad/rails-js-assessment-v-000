<%= form_for(@owner) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />
  <br />
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %><br />
  <br />
  <%= f.label :email_address %>
  <%= f.text_field :email_address %><br />
  <br />
  <%= f.label :physical_address %>
  <%= f.text_field :physical_address %><br />
  <br />
  <%= f.submit "Submit" %>
<% end %>

<% if @owner.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@owner.errors.count, "error") %>
      prohibited this owner from being saved:
    </h2>

    <ul>
    <% @owner.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>