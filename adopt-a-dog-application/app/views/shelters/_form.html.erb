<%= form_for(@shelter) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />
  <br />
  <%= f.label :physical_address %>
  <%= f.password_field :physical_address %><br />
  <br />
  <%= f.submit "Submit" %>
<% end %>

<% if @shelter.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@shelter.errors.count, "error") %>
      prohibited this shelter from being saved:
    </h2>

    <ul>
    <% @shelter.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
